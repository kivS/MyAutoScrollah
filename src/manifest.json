{
	"manifest_version": 2,
	"name": "__MSG_appName__",
	"version": "1.0",
	"default_locale": "en",

	"description": "__MSG_appDescription__",

	"permissions": [
	    "storage",
	    "tabs"
	],

	"browser_action": {
	    "default_title": "ScrollahMe",
	    "default_icon": {
	    	"16":"images/icon_016.png",
	    	"32":"images/icon_032.png"
	    },      
	    "default_popup": "popup.html"       
	},

	"background": {
	   "scripts": ["libs/lokijs.min.js","background.js"],
	   "persistent": false
	},

	"content_scripts": [
	    {
	      "matches": ["http://*/*", "https://*/*", "file:///*"],
	      "js": ["content.js"],
	      "run_at": "document_idle"
	    }
	],

	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}

	
}